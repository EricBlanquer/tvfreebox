	"browser_action": {
		"default_icon": "icon_16.png",
		"default_popup": "Flyout.html"
	},
	"options_page": "Settings.html",
	"homepage_url": "http://ssofast.com/iop/gadget-windows-remote-freebox-v5/",
	"permissions": [
	  "http://hd1.freebox.fr/",
	  "http://hd2.freebox.fr/"
	]
 }