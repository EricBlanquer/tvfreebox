{
	"manifest_version": 2,
	"name": "Télécommande Virtuelle Freebox Révolution/HD",
	"version": "2.3.1",
	"description": "Permet de piloter votre Freebox Révolution V6 ou HD V5.",
	"icons": { 
		 "16": "icon_16.png",
		 "48": "icon_48.png",
		"128": "icon_128.png"
